<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Nadim.Views.Account.InfoPageControls.EditEmail.EditEmailDescriptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nadim.Views.Account.InfoPageControls.EditEmail"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="360">

    <StackPanel VerticalAlignment="Center">
        <TextBlock x:Name="Title" Margin="0 8" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" TextWrapping="Wrap">
            التحقق من البريد الإلكتروني
        </TextBlock>

        <TextBlock x:Name="textBlock" Margin="0 4" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>

        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center">
            هل فقدت إمكانية الوصول إلى بريدك الإلكتروني؟ يرجى الاتصال بمزود البريد الإلكتروني الخاص بك لاستعادة إمكانية الوصول.
        </TextBlock>
    </StackPanel>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Nadim.Views.SignUp.EmailVerificationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nadim.Views.SignUp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <StackPanel VerticalAlignment="Center">
        <TextBlock Margin="4 0 4 8" FontWeight="Bold" Width="357">التأكيد عبر البريد الإلكتروني</TextBlock>
        <TextBlock Margin="4 8 4 8" TextWrapping="Wrap" TextAlignment="Justify" Width="357">لقد تم إرسال رمز التأكيد، تحقق من بريدك الإلكتروني للحصول على رمز التأكيد الخاص بك.</TextBlock>
        <TextBox HorizontalAlignment="Center" TextAlignment="Center" Margin="4 8 4 8" Width="357" PlaceholderText="قم بإدخال الرمز"></TextBox>
        <Button HorizontalAlignment="Center" Margin="4 8 4 8" Width="357" Style="{StaticResource AccentButtonStyle}">التالي</Button>
        <HyperlinkButton HorizontalAlignment="Center" Margin="4 8 4 8" IsEnabled="False">لم تتلقى البريد الإلكتروني؟ إعادة إرسال</HyperlinkButton>
    </StackPanel>
</Page>
